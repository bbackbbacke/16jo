<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>My Homepage</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>
      .hpg {
        font-size: 50px;
        text-align: center;
        margin-top: 50px;
      }
      .fk {
        text-align: center;
        padding-bottom: 5px;
        margin-top: 100px;
      }
      .wiw {
        font-size: 30px;
        color: rgb(69, 69, 69);
      }
      .table {
        text-align: center;
        margin: 10px auto;
        max-width: 80%;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
      }
      .table thread th,
      .table tbody th {
        padding: 10px;
      }

      .hrOnply {
        margin-top: 0px;
      }
      .ply {
        margin: auto;
        text-align: center;
        padding-bottom: 5px;
        margin-top: 100px;
      }
      #playlist-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        gap: 20px;
        padding: 40px;
        margin: auto;
        border: 1px solid black;
        max-width: 80%;
        background-color: green;
      }
      .line {
        display: flex;
        flex-basis: 100%;
        align-items: center;
        color: black;
        font-size: 30px;
        margin: 8px 0px;
      }
      .line::before {
        content: '';
        flex-grow: 1;
        margin: 0px 16px;
        background: rgba(0, 0, 0, 0.35);
        height: 1px;
        font-size: 0px;
        line-height: 0px;
      }
      .line::after {
        content: '';
        flex-grow: 1;
        margin: 0px 16px;
        background: rgba(0, 0, 0, 0.35);
        height: 1px;
        font-size: 0px;
        line-height: 0px;
      }
      #chartList {
        list-style: none;
      }
    </style>
  </head>

  <body>
    <h1 class="hpg">My Homepage</h1>

    <div class="container-fluid">
      <div class="row justify-content-end">
        <div class="col-auto">
          <button
            type="button"
            onclick="location.href='/'"
            class="btn btn-secondary btn-sm"
          >
            Home
          </button>
        </div>
      </div>
    </div>

    <hr />

    <div class="fk">
      <h1 class="wiw">내가 쓴 글</h1>
    </div>

    <div>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">작성일</th>
            <th scope="col">제목</th>
            <th scope="col">조회수</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < posts.length; i++) { %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= posts[i].date %></td>
            <td><%= posts[i].title %></td>
            <td><%= posts[i].views %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <hr class="hrOnply" />

    <div class="ply">
      <h1 class="line">Music Chart</h1>
      <button class="btn btn-secondary btn-sm" onclick="toggleChart()">
        어떤 음악이 인기 있을까?
      </button>
      <ul id="chartList" style="display: none"></ul>

      <script>
        let chartVisible = false;

        async function toggleChart() {
          chartVisible = !chartVisible;

          if (chartVisible) {
            await getTopTracks();
            document.getElementById('chartList').style.display = 'block';
          } else {
            document.getElementById('chartList').innerHTML = '';
            document.getElementById('chartList').style.display = 'none';
          }
        }

        async function getTopTracks() {
          const apiKey = '524eb087a3548743086a602729403094';
          const apiUrl = `https://ws.audioscrobbler.com/2.0/?method=chart.gettoptracks&api_key=${apiKey}&format=json`;

          try {
            const response = await fetch(apiUrl);
            const data = await response.json();
            const chartList = document.getElementById('chartList');
            chartList.innerHTML = ''; // Clear previous results

            if (data.tracks.track.length > 0) {
              data.tracks.track.forEach((track) => {
                const listItem = document.createElement('li');
                listItem.textContent = `${track.name} - ${track.artist.name}`;
                chartList.appendChild(listItem);
              });
            } else {
              const listItem = document.createElement('li');
              listItem.textContent = 'No top tracks found';
              chartList.appendChild(listItem);
            }
          } catch (error) {
            console.error('Error fetching top tracks:', error);
          }
        }
      </script>
    </div>
  </body>
</html>
